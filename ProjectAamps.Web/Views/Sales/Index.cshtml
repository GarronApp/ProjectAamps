                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="txtIndividualName" name="IndividualName" placeholder="first name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtLastName" class="col-sm-2 control-label">Last Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="txtIndividualSurname" name="IndividualSurname" placeholder="last name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtCellNumber" class="col-sm-2 control-label">Cell No</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="txtIndividualContactCell" name="IndividualContactCell" placeholder="cell number">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtWorkNumber" class="col-sm-2 control-label">Work No</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="txtIndividualContactWork" name="IndividualContactWork" placeholder="work number">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtEmail" class="col-sm-2 control-label">Email Address</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="txtIndividualEmail" name="IndividualEmail" placeholder="email address">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="selectPreferdContactMethod" class="col-sm-2 control-label">Contact Method</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="PreferedContactMethodID" name="PreferedContactMethodID"></select>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <input type="button" id="btnReservedUpdatePersonDetails" class="btn btn-primary btn-sm" value="Update" />
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

