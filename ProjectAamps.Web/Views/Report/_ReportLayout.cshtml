<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
</head>
<body style="background-color:#c3c3c3;">
    <header>
        <div class="container report-background">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="text-center">
                        Summary Reports
                    </h3>
                    <br />
                    <div class="row">
                        <p class="text-center" id="buttonsDashBoard">
                            <button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("SalesReport","Report")'">Sales Report</button>
                            <button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("BondsReport","Report")'">Bonds Report</button>
                        </p>
                    </div>
                    <div>
                        <hr style="color:#000" />
                    </div>
                    <div class="pull-right">
                        <button type="button" onclick="location.href='@Url.Action("ExportToPdf", "Report")'" class="btn btn-primary btn-sm">Export PDF</button>
                        @*<button type="button" onclick="location.href='@Url.Action("ExportToExcel", "Report")'" class="btn btn-primary btn-sm">Export Excel</button>*@
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container report-background">
        @RenderBody()
    </div>
    <footer class="container report-background">
        <div>
            <hr style="color:#000" />
        </div>
        <div>
            <div class="row">
                <div class="col-md-12">
                    <p class="fa-copyright glyphicon-copyright-mark"> Access Africa (Pty) Ltd (c) 2015<p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    function ExportPDF() {
        var url = '@Url.Action("TestReport", "Report")';
        $.ajax({
            url: url,
            type: 'POST',
            async: true,
            cache: false,
            data: {},
            success: function () {
              //  location.href = '@Url.Action("Login", "Account")';
            },
            error: function (exception) {
                console.log(exception);
            }

        });
    }
</script>
