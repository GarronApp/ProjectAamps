@model IEnumerable<AAMPS.Clients.AampService.SalesReportQuery>
@{
    ViewBag.Title = "SalesReport";
    Layout = "~/Views/Report/_ReportLayout.cshtml";
}

<h4>Sales Report for </h4>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-responsive" id="tableSalesReport" style="width:100%">
                <thead style="background-color:#000000; color:#ffffff">
                    <tr>
                        <td class="width100">Unit No</td>
                        <td class="width100">Phase</td>
                        <td class="width100">Price</td>
                        <td class="width100">Type</td>
                        <td class="width100">Status</td>
                        <td class="width100">Agency</td>
                        <td class="width100">Agent</td>
                        <td class="width100">Purchaser</td>
                        <td class="width100">Deposit</td>
                        <td class="width100">Deposit Date</td>
                        <td class="width100">Proof</td>
                        <td class="width100">Cntr Signed</td>
                        <td class="width100">Bond</td>
                        <td class="width100">Bond Req</td>
                        <td class="width100">Bond Amount Grant</td>
                        <td class="width100">Granted</td>
                        <td class="width100">Amount Due</td>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.UnitNo</td>
                            <td>@item.Phase</td>
                            <td><label id="lblPrice">@item.Price</label></td>
                            <td>@item.Type</td>
                            <td>@item.Status</td>
                            <td>@item.Agency</td>
                            <td>@item.Agent</td>
                            <td>@item.Purchaser</td>
                            <td><label id="lblDeposit">@item.Deposit</label></td>
                            <td><label id="lblDepositDate">@item.DepositDate</label></td>
                            <td>@item.Proof</td>
                            <td><label id="lblCntrSigned">@item.CntrSigned</label></td>
                            <td>@item.Bond</td>
                            <td><label id="lblBondReq">@item.BondReq</label></td>
                            <td>@item.BondAmountGrant</td>
                            <td><label id="lblDateGranted">@item.Granted</label></td>
                            <td><label id="lblAmountDue">@item.AmountDue</label></td>
                        </tr>
                    </tbody>
                }
            </table>
            </div>
        </div>
    </div>

            @section Scripts {
                <script>
                    $(function () {
                        var resources = new Resources();
                        resources.formatTableColumnRandValue("tableSalesReport", 2, "lblPrice");
                        resources.formatTableColumnRandValue("tableSalesReport", 8, "lblDeposit");
                        resources.formatTableColumnDateValue("tableSalesReport", 9, "lblDepositDate");
                        resources.formatTableColumnDateValue("tableSalesReport", 11, "lblCntrSigned");
                        resources.formatTableColumnRandValue("tableSalesReport", 13, "lblBondReq");
                        resources.formatTableColumnDateValue("tableSalesReport", 15, "lblDateGranted");
                        resources.formatTableColumnRandValue("tableSalesReport", 16, "lblAmountDue");
                    });
                </script>
            }



